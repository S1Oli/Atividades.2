public class ProjetoLivraria {
    public static void main(String[] args) {

        Livro livro1 = new livro();
        Livro livro2 = new livro();

        livro1.titulo = "Vermelho, branco e sangue azul";
        livro1.autor = "Causey McQuiston";
        livro1.preco = 50.00;

        livro2.titulo = "coraline";
        livro2.autor = "Neil Gaiman";
        livro2.preco = 70.00;

        System.out.println("informações dos Livros: ");
        livro1.mostrarinfo();
        livro2.mostrarinfo();

        Cliente cliente1 = new Cliente();
        Cliente1.nome = "Rafael";
        Cliente1.idade = "19";
        Cliente1.email = "Rafael@gmail.com";

        Cliente cliente2 = new Cliente();
        Cliente2.nome = "Lidia";
        Cliente2.idade = "24";
        Cliente2.email = "Lidiana@gmail.com";

        System.out.println("informações dos Clientes: ");
        cliente1.mostrarinfo();
        cliente2.mostrarinfo();

        cliente1.comprarLivro(livro1.titulo);
        cliente2.comprarLivro(livro2.titulo);

    }
}